<div class="container">
    <div class="row">
        {{#each movieIndex}}
            <div class="col-lg-2 col-md-3 col-sm-3 col-xs-6">
                <div class="thumbnail" style="max-height: 28rem;">
                    <a href="/movie?id={{_id}}">
                        <img style="width: 100%;height:100%;min-height: 180px;max-height: 180px;" src="{{poster}}" alt="{{title}}">
                        <div class="caption text-center">
                            <h3>{{title}}</h3>
                            <p>
                                <a href="/movie?id={{_id}}" role="button" class="btn btn-primary">观看</a>
                            </p>
                        </div>
                    </a>
                </div>
            </div>
        {{/each}}
    </div>
</div>